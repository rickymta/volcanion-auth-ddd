# Environment Variables Template for Volcanion Auth DDD

# Copy this file to .env and update the values according to your environment

# Database Configuration
DB_CONNECTION_STRING=Server=mysql;Port=3306;Database=volcanion_auth;Uid=volcanion_user;Pwd=volcanion_password;
DB_ROOT_PASSWORD=root_password_production
DB_USER=volcanion_user
DB_PASSWORD=volcanion_password_production

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379
REDIS_PASSWORD=redispassword123

# Elasticsearch Configuration
ELASTICSEARCH_CONNECTION_STRING=http://elasticsearch:9200
ELASTICSEARCH_PASSWORD=elasticpassword123

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-that-is-at-least-32-characters-long-for-production
JWT_ISSUER=VolcanionAuth
JWT_AUDIENCE=VolcanionAuth
JWT_ACCESS_TOKEN_EXPIRY=15
JWT_REFRESH_TOKEN_EXPIRY=7

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@volcanion.com

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
API_BASE_URL=https://your-domain.com

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=15d

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/nginx/certs/server.crt
SSL_KEY_PATH=/etc/nginx/certs/server.key
