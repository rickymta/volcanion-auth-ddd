{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=volcanion_auth_dev;Uid=root;Pwd=password;",
    "RedisConnection": "localhost:6379",
    "ElasticsearchConnection": "http://localhost:9200"
  },
  "AppSettings": {
    "BaseUrl": "http://localhost:5282"
  },
  "JwtSettings": {
    "Key": "development-super-secret-key-that-is-at-least-32-characters-long-for-jwt-tokens",
    "Issuer": "VolcanionAuth-Dev",
    "Audience": "VolcanionAuth-Dev",
    "AccessTokenExpiryMinutes": 1440,
    "RefreshTokenExpiryDays": 30
  },
  "ElasticsearchSettings": {
    "ConnectionString": "http://localhost:9200",
    "IndexPrefix": "volcanion-auth-dev",
    "Enabled": false
  },
  "EmailSettings": {
    "SmtpHost": "localhost",
    "SmtpPort": 1025,
    "EnableSsl": false,
    "Username": "",
    "Password": "",
    "FromEmail": "dev@volcanion.com",
    "FromName": "Volcanion Auth Dev"
  },
  "SmsSettings": {
    "Provider": "Mock"
  },
  "FileStorageSettings": {
    "StoragePath": "uploads",
    "MaxFileSizeBytes": 10485760,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"]
  },
  "SwaggerSettings": {
    "Title": "Volcanion Auth API - Development",
    "Version": "v1-dev",
    "Description": "Authentication and Authorization API using DDD Architecture - Development Environment"
  },
  "CorsSettings": {
    "AllowedOrigins": ["http://localhost:3000", "https://localhost:3000", "http://localhost:3001", "https://localhost:3001", "http://localhost:5173", "https://localhost:5173"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"],
    "AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
  }
}
