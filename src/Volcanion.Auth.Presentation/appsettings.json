{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "BaseUrl": "https://localhost:7001"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Port=3306;Database=volcanion_auth;Uid=sample_user;Pwd=sample_password;",
    "RedisConnection": "redis://localhost:6379",
    "ElasticsearchConnection": "http://localhost:9200"
  },
  "JwtSettings": {
    "Key": "your-super-secret-key-that-is-at-least-32-characters-long",
    "Issuer": "VolcanionAuth",
    "Audience": "VolcanionAuth",
    "AccessTokenExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },
  "ElasticsearchSettings": {
    "ConnectionString": "http://localhost:9200",
    "IndexPrefix": "volcanion-auth",
    "Enabled": true
  },
  "EmailSettings": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "FromEmail": "noreply@volcanion.com",
    "FromName": "Volcanion Auth"
  },
  "SmsSettings": {
    "Provider": "Mock",
    "TwilioSettings": {
      "AccountSid": "your-twilio-account-sid",
      "AuthToken": "your-twilio-auth-token",
      "FromPhoneNumber": "+1234567890"
    },
    "AwsSnsSettings": {
      "AccessKey": "your-aws-access-key",
      "SecretKey": "your-aws-secret-key",
      "Region": "us-east-1"
    }
  },
  "FileStorageSettings": {
    "StoragePath": "uploads",
    "MaxFileSizeBytes": 5242880,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".pdf", ".doc", ".docx"]
  },
  "SwaggerSettings": {
    "Title": "Volcanion Auth API",
    "Version": "v1",
    "Description": "Authentication and Authorization API using DDD Architecture"
  },
  "CorsSettings": {
    "AllowedOrigins": ["http://localhost:3000", "https://localhost:3000"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["Content-Type", "Authorization"]
  }
}
